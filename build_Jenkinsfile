pipeline {
    agent any

    environment {
        scannerHome = tool 'sonar-scanner'
    }

    stages{
        stage('Compile Front'){
            steps{
                sh "npm install"
                sh "npm run build"
            }
        }
        // stage('Run tests'){
        //     steps{
        //         sh "npm test"
        //     }
        // }
        stage('SonarQube'){
            steps{
                withSonarQubeEnv('Sonar'){
                    sh "${scannerHome}/bin/sonar-scanner \
                    -Dsonar.projectKey=Theare \
                    -Dsonar.sources=. "
                }
            }
        }
        stage('Quality gate'){
            steps{
                waitForQualityGate abortPipeline: true
            }
        }
    }
    post{
        always{
            cleanWs()
        }
        success{
            //build next pipeline
            echo 'nice!'
        }
    }
}

pipeline{
    agent any
options {
    disableConcurrentBuilds()
    buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5'))
}
   stages{
        stage('Pull base images'){
            options{
                timeout( time: 5 , unit: 'MINUTES')
            }
            steps{
                sh 'docker pull registry.hiriko.local:5000/node:8-alpine'
            }
        }
        stage('Build images'){
            options{
                timeout(time: 5 , unit: 'MINUTES')
            }
            steps{
                sh 'docker-compose -f dev.front.yml build'
            }
        }
        stage('Run Containers'){
            options{
                timeout(time: 5 , unit: 'MINUTES')
            }
            steps{
                sh 'docker-compose -f dev.front.yml up -d'
            }
        }
        stage('Test service'){
            options{
                timeout( time: 2 , unit: "MINUTES")
            }
            steps{
                sh 'bash check_service.sh'
            }
        }
    }
    post{
        always{
            cleanWs()
            sh 'docker stop $(docker ps -aq) '
            sh 'docker rm $(docker ps -aq) '
            sh 'docker network prune -f'
            sh 'docker image rm $(docker image ls -q) -f'
        }
        aborted {
            slackSend color: "danger", message: "Build aborted: ${env.JOB_NAME} ${env.BUILD_NUMBER}"
        }
        success{
            slackSend color: "good", message: "Build finished: ${env.JOB_NAME} ${env.BUILD_NUMBER}"
        }
    }
}